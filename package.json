{
  "name": "gb-emu",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:compat",
    "test:unit": "vitest run tests/unit",
    "test:compat:clean": "rm -rf test-results/compat",
    "test:compat": "npm run test:compat:clean && npm run test:compat:tier1 && npm run test:compat:tier2 && npm run test:compat:tier3a",
    "test:compat:soft": "npm run test:compat:clean && GB_COMPAT_STRICT=0 npm run test:compat:tier1 && GB_COMPAT_STRICT=0 npm run test:compat:tier2 && GB_COMPAT_STRICT=0 npm run test:compat:tier3a",
    "test:compat:tier1": "GB_COMPAT_TIER=tier1 vitest run tests/compat/blargg.compat.test.ts tests/compat/mooneye.compat.test.ts",
    "test:compat:tier2": "GB_COMPAT_TIER=tier2 vitest run tests/compat/mooneye.compat.test.ts",
    "test:compat:tier3a": "GB_COMPAT_TIER=tier3a vitest run tests/compat/mooneye.compat.test.ts",
    "test:compat:tier3b": "GB_COMPAT_TIER=tier3b vitest run tests/compat/mooneye.compat.test.ts",
    "test:compat:mapper:shadow": "GB_COMPAT_STRICT=0 GB_MAPPER_COMPAT_MODE=shadow vitest run tests/compat/mapper.compat.test.ts",
    "test:compat:mapper:strict": "GB_COMPAT_STRICT=1 GB_MAPPER_COMPAT_MODE=strict vitest run tests/compat/mapper.compat.test.ts",
    "test:compat:extended": "npm run test:compat && GB_COMPAT_STRICT=0 npm run test:compat:tier3b && npm run test:compat:mapper:shadow",
    "test:compat:report": "node scripts/compat_report.mjs",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.17",
    "prettier": "^3.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
